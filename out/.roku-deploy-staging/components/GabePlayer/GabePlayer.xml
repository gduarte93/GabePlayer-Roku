<!-- GabePlayer.xml -->
<component name="GabePlayer" extends="Video">
    <interface>
        <field id="customPlayerEvent" type="assocarray" alwaysNotify="true" />
        <function name="play" />
        <function name="pause" />
    </interface>
    
    <children>
        <Group
            id="progress"
            translation="[0, 1060]"
        >
            <Rectangle
                id="progressBackground"
                width="1920"
                height="20"
                color="0xFF0000"
                opacity="0.5"
            />
            <Rectangle
                id="progressFill"
                width="1"
                height="20"
                color="0xFF0000"
                opacity="1"
            />
        </Group>
    </children>

    <script type="text/brightscript" uri="GabePlayer.brs" />
    <!-- <script type="text/brightscript" uri="Thumbnails.brs" /> -->
</component>