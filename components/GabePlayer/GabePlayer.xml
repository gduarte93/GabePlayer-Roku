<!-- GabePlayer.xml -->
<component name="GabePlayer" extends="Video">
    <interface>
        <field id="customPlayerEvent" type="assocarray" alwaysNotify="true" />
        <field id="config" type="assocarray" onChange="onConfigChange" />
        <function name="play" />
        <function name="pause" />
    </interface>
    
    <children>
        <Group id="titleGroup" clippingRect="[0, 0, 1920, 1080]">
            <Poster
                id="headerGradient"
                uri="pkg:/images/BackgroundGradient.png"
                width="1920"
                height="1080"
                scaleRotateCenter="[960, 540]"
                rotation="3.14159"
                translation="[0, -400]"
            />
            <Label
                id="titleLabel"
                width="1920"
                height="60"
                text="Title"
                color="0xFFFFFF"
                translation="[20, 20]"
            />
            <Label
                id="descriptionLabel"
                width="1920"
                height="60"
                text="This is the description for the video"
                color="0xFFFFFF"
                translation="[20, 60]"
            />
        </Group>

        <Group
            id="progress"
            translation="[0, 1020]"
        >
            <Rectangle
                id="progressBackground"
                width="1920"
                height="60"
                color="0xFF0000"
                opacity="0.5"
            />
            <Rectangle
                id="progressFill"
                width="1"
                height="60"
                color="0xFF0000"
                opacity="1"
            />
            <Label
                id="progressLabel"
                visibile="false"
                translation="[960, -60]"
                text="||"
                color="0xFF0000"
                font="font:LargeBoldSystemFont"
                width="200"
                height="200"
                scaleRotateCenter="[100, 100]"
            />

            <Label
                id="currentTimeLabel"
                color="0xFFFFFF"
                text="00:00:00"
                translation="[20, 16]"
            />
            <Label
                id="endTimeLabel"
                color="0xFFFFFF"
                text="99:99:99"
                translation="[-20, 16]"
                horizAlign="right"
                width="1920"
            />
        </Group>

        <Group
            id="loadingIcon"
            translation="[760, 510]"
            visibile="false"
        >
            <Rectangle
                id="loadBackground"
                width="400"
                height="20"
                color="0x000000"
                width="400"
                height="60"
            />
            <Label
                id="loadLabel"
                text="Loading..."
                horizAlign="center"
                vertAlign="center"
                color="0xFFFFFF"
                width="400"
                height="60"
            />
        </Group>

        <Group id="seekThumbGroup">
            <Poster
                id="seekThumbImage"
                loadDisplayMode="scaleToFit"
            >
                <!-- <Rectangle
                    id="seekThumbImageBackground"
                    color="0xFF0000"
                /> -->
            </Poster>
        </Group>

    </children>

    <script type="text/brightscript" uri="GabePlayer.brs" />
    <!-- <script type="text/brightscript" uri="Thumbnails.brs" /> -->
</component>